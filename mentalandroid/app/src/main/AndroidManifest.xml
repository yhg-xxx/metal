<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- 网络权限 -->
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <!-- 读取手机状态权限 -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.READ_PHONE_NUMBERS"/>
    <uses-permission android:name="android.permission.READ_SMS"/>
    
    <!-- 声明电话功能为可选，解决Chrome OS兼容性问题 -->
    <uses-feature android:name="android.hardware.telephony" android:required="false"/>

    <application
        android:name=".App"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Mental"
        tools:targetApi="31">
        <activity
            android:name=".splash.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.Mental.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.Mental" />
        <activity
            android:name=".ui.screens.LoginActivity"
            android:exported="false"
            android:theme="@style/Theme.Mental.NoActionBar" />
        <activity
            android:name=".ui.features.ProfileEditActivity"
            android:exported="false"
            android:theme="@style/Theme.Mental.NoActionBar" />
        <activity
            android:name=".ui.features.CounselorSearchActivity"
            android:exported="false"
            android:theme="@style/Theme.Mental.NoActionBar" />
        <activity
            android:name=".ui.features.QuickConsultationActivity"
            android:exported="false"
            android:theme="@style/Theme.Mental.NoActionBar" />
        <activity
            android:name=".ui.features.IconDisplayActivity"
            android:exported="false"
            android:theme="@style/Theme.Mental.NoActionBar" />
        <activity
            android:name=".ui.features.CounselorDetailActivity"
            android:exported="false"
            android:theme="@style/Theme.Mental.NoActionBar" />
        <activity
            android:name=".ui.features.ChatDetailActivity"
            android:exported="false"
            android:theme="@style/Theme.Mental.NoActionBar"
            android:windowSoftInputMode="stateHidden|adjustResize" />

    </application>

</manifest>